router id 10.10.0.10;
ipv4 table t_direct;
protocol device {
}
protocol kernel {
    ipv4 {
        import all;
        export all;
    };
    learn;
}
protocol direct local_nets{
    ipv4 {
        table t_direct;
        import all;
    };
interface "ix10";
}
define LOCAL_COMM = (10, 0, 0);
define CUSTOMER_COMM = (10, 1, 0);
define PEER_COMM = (10, 2, 0);
define PROVIDER_COMM = (10, 3, 0);

ipv4 table t_bgp;

protocol pipe {
    table t_bgp;
    peer table master4;
    import none;
    export all;
}
protocol pipe {
    table t_direct;
    peer table t_bgp;
    import none;
    export filter { bgp_large_community.add(LOCAL_COMM); accept; };
}
protocol bgp p_as178 {
    ipv4 {
    	table t_bgp;
        import filter {
            bgp_large_community.add(PROVIDER_COMM);
            
            accept;
        };
        export all;
        next hop self;
    };
    
    local 10.10.0.10 as 10;
    neighbor 10.10.0.178 as 178;
}
protocol bgp p_as110 {
    ipv4 {
    	table t_bgp;
        import filter {
            bgp_large_community.add(PROVIDER_COMM);
            
            accept;
        };
        export all;
        next hop self;
    };
    
    local 10.10.0.10 as 10;
    neighbor 10.10.0.110 as 110;
}
protocol bgp p_as111 {
    ipv4 {
    	table t_bgp;
        import filter {
            bgp_large_community.add(PROVIDER_COMM);
            
            accept;
        };
        export all;
        next hop self;
    };
    
    local 10.10.0.10 as 10;
    neighbor 10.10.0.111 as 111;
}

