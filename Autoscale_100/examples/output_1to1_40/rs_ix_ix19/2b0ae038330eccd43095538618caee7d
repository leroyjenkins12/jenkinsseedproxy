router id 10.19.0.19;
ipv4 table t_direct;
protocol device {
}
protocol kernel {
    ipv4 {
        import all;
        export all;
    };
    learn;
}
protocol direct local_nets{
    ipv4 {
        table t_direct;
        import all;
    };
interface "ix19";
}
define LOCAL_COMM = (19, 0, 0);
define CUSTOMER_COMM = (19, 1, 0);
define PEER_COMM = (19, 2, 0);
define PROVIDER_COMM = (19, 3, 0);

ipv4 table t_bgp;

protocol pipe {
    table t_bgp;
    peer table master4;
    import none;
    export all;
}
protocol pipe {
    table t_direct;
    peer table t_bgp;
    import none;
    export filter { bgp_large_community.add(LOCAL_COMM); accept; };
}
protocol bgp p_as187 {
    ipv4 {
    	table t_bgp;
        import filter {
            bgp_large_community.add(PROVIDER_COMM);
            
            accept;
        };
        export all;
        next hop self;
    };
    
    local 10.19.0.19 as 19;
    neighbor 10.19.0.187 as 187;
}
